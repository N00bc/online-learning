<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cyn.onlinelearning.media.mapper.MediaProcessMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.cyn.onlinelearning.media.model.po.MediaProcess">
        <id column="id" property="id"/>
        <result column="file_id" property="fileId"/>
        <result column="filename" property="filename"/>
        <result column="bucket" property="bucket"/>
        <result column="file_path" property="filePath"/>
        <result column="status" property="status"/>
        <result column="create_date" property="createDate"/>
        <result column="finish_date" property="finishDate"/>
        <result column="url" property="url"/>
        <result column="errormsg" property="errormsg"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, file_id, filename, bucket, status, create_date, finish_date, url
    </sql>
    <update id="updateField">
        UPDATE media_process
        <trim prefix="set" suffixOverrides=",">
            <if test="mediaProcess.status != null and mediaProcess.status != ''">status = #{mediaProcess.status},</if>
            <if test="mediaProcess.errormsg != null and mediaProcess.errormsg != ''">errormsg = #{mediaProcess.errormsg},</if>
            <if test="mediaProcess.url != null and mediaProcess.url != ''">url = #{mediaProcess.url},</if>
            <if test="mediaProcess.finishDate != null and mediaProcess.finishDate != ''">finish_date = #{mediaProcess.finishDate},</if>
        </trim>
        WHERE id = #{mediaProcess.id}
    </update>
    <select id="selectListByShardIndex" resultType="com.cyn.onlinelearning.media.model.po.MediaProcess">
        SELECT *
        FROM media_process
        WHERE id % #{shardTotal} = #{shardIndex}
        LIMIT #{count}
    </select>

</mapper>
